{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "tailwind:build && remix build",
    "dev": "concurrently \"npm:dev:tailwind\" \"npm:dev:web\"",
    "dev:web": "remix dev",
    "dev:web-build": "remix build",
    "dev:tailwind": "tailwindcss --output ./app/styles/tailwind.css --config tailwind.config.js --watch",
    "tailwind:build": "tailwindcss --output ./app/styles/tailwind.css --config tailwind.config.js --minify",
    "postinstall": "remix setup node",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.2",
    "@heroicons/react": "^1.0.5",
    "@remix-run/react": "^1.0.6",
    "@remix-run/serve": "^1.0.6",
    "concurrently": "^6.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.0.6"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.0.6",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.3",
    "postcss-cli": "^9.0.2",
    "tailwindcss": "^2.2.19",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
